        <ComboBox x:Name="listAdressBT" HorizontalAlignment="Left" Margin="291,105,0,0" Grid.Row="1" VerticalAlignment="Top" Width="211" Height="36" RenderTransformOrigin="0.496,1.797"/>



    </Grid>
